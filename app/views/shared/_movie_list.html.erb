<% @movies.each do |movie| %>
  <section class="movie">
    <div class="image">
      <%= main_image(movie) %>
    </div>
    <div class="summary">
      <h2>
        <%= link_to movie.title, movie_path(movie) %>
      </h2>
      <h3>
        <%= total_gross(movie) %>
      </h3>
      <span class="stars">
        <%= render 'shared/stars', percent: average_stars(movie) %>
      </span>
      <p>
        <%= truncate(movie.description, length: 150, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>